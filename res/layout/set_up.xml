<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
    	android:background="@color/green">
         
        <Button 
            android:id="@+id/up_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/btn_back"/>
        
		<TextView 
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="4"
		    android:text="@string/system_setting"
		    android:textSize="@dimen/title"
		    android:gravity="center"/>
		
		<View 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
	    
    </LinearLayout>
        
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>
        
        <LinearLayout 
            android:id="@+id/gateway_register"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:orientation="horizontal"
            android:background="@drawable/edittext_selector">
            <ImageView 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher"/>
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:orientation="vertical">
                
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/big_text"
                    android:text="@string/gateway_register"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/gateway_id"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/small_text"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <View 
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:layout_marginRight="5dp"/>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/gateway_edit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:orientation="horizontal"
            android:background="@drawable/edittext_selector">
            <ImageView 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher"/>
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:orientation="vertical">
                
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/big_text"
                    android:text="@string/gateway_edit"
                    android:gravity="center_vertical"/>
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/small_text"
                    android:text="@string/edit1"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <View 
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:layout_marginRight="5dp"/>
        </LinearLayout>
       
           
        <LinearLayout 
            android:id="@+id/DS"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:orientation="horizontal"
            android:background="@drawable/edittext_selector">
            <ImageView 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher"/>
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:orientation="vertical">
                
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/big_text"
                    android:text="@string/DS"
                    android:gravity="center_vertical"/>
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/small_text"
                    android:text="@string/data1"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <View 
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:layout_marginRight="5dp"/>
        </LinearLayout>
       
           
        <LinearLayout 
            android:id="@+id/push_sound"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:orientation="horizontal"
            android:background="@drawable/edittext_selector">
            <ImageView 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher"/>
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:orientation="vertical">
                
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/big_text"
                    android:text="@string/push_sound"
                    android:gravity="center_vertical"/>
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/small_text"
                    android:text="@string/push1"
                    android:gravity="center_vertical"/>
             
            </LinearLayout>
            <CheckBox 
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:layout_marginRight="5dp"
                 style="@style/more_checks"/>
        </LinearLayout>
       
           
        <LinearLayout 
            android:id="@+id/update_firmware"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:orientation="horizontal"
            android:background="@drawable/edittext_selector">
            <ImageView 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher"/>
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:orientation="vertical">
                
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/big_text"
                    android:text="@string/update_firmware"
                    android:gravity="center_vertical"/>
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/small_text"
                    android:text="@string/update1"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <View 
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:layout_marginRight="5dp"/>
        </LinearLayout>
       
           
        <LinearLayout
            android:id="@+id/advise_message" 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:orientation="horizontal"
            android:background="@drawable/edittext_selector">
            <ImageView 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher"/>
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:orientation="vertical">
                
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/big_text"
                    android:text="@string/advise_message"
                    android:gravity="center_vertical"/>
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/small_text"
                    android:text="@string/advice1"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <View 
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:layout_marginRight="5dp"/>
        </LinearLayout>
       
           
        <LinearLayout 
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:orientation="horizontal"
            android:background="@drawable/edittext_selector">
            <ImageView 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher"/>
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:orientation="vertical">
                
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/big_text"
                    android:text="@string/about"
                    android:gravity="center_vertical"/>
                <TextView 
                    android:id="@+id/versions"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/small_text"
                    android:text="@string/about1"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <View 
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:layout_marginRight="5dp"/>
        </LinearLayout>
       
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"/>
    </LinearLayout>
        
</LinearLayout>
