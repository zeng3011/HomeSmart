<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.homesmart"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <!-- 二维码权限 -->
    <uses-permission android:name="android.permission.CAMERA"></uses-permission>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
	<uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.autofocus" />
	<uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.FLASHLIGHT"/>

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/deblob"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="object.homesmart.gogo.main.Splash"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="object.homesmart.gogo.main.Control"
            android:screenOrientation="portrait"/>
        <activity 
            android:name="object.homesmart.gogo.main.Conditional"
            android:screenOrientation="portrait"/>
        <activity
            android:name="object.homesmart.gogo.adapter.AlarmAdapter"
            android:screenOrientation="portrait" />
        <activity 
            android:name="object.homesmart.gogo.adapter.ShowViewPager"
            android:screenOrientation="portrait"/>
        <activity 
            android:name="object.homesmart.gogo.db.SQLiteDemo"
            android:screenOrientation="portrait"/>
        <activity 
            android:name="object.homesmart.gogo.main.MainActivity"
            android:screenOrientation="portrait"/>
        <activity 
            android:name="object.homesmart.gogo.db.DataBaseTest"
            android:screenOrientation="portrait"/>
        <activity 
            android:name="object.homesmart.gogo.main.Favorite"
            android:screenOrientation="portrait"/>
        <activity 
            android:name="object.homesmart.gogo.ZXing.CaptureActivity"
            android:screenOrientation="portrait"/>
    </application>
    
</manifest>
